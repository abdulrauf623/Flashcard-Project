<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Flashcard">


    <EditText

        android:id="@+id/add_question"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="644dp"
        android:hint="Enter the question here!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_answer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:hint="Enter the answer here!"
        app:layout_constraintTop_toBottomOf="@+id/add_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.89" />
    
    
    <ImageView
        android:id="@+id/save_this"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/save_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView

        android:id="@+id/times_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/flashcard_x_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>